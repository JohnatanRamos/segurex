---
import "../styles/global.css";
import backgroundImage from "../assets/asesor.webp";
import data from "../config/phone_messages.json";

const phone = data.phone_number;
const message = encodeURIComponent(data.default_message);
---

<section
  id="inicio"
  class="mt-10 hero-banner text-white"
  style={`background-image: url(${backgroundImage.src}); height: calc(100vh - 128px);`}
>
  <div class="container mx-auto px-6 py-10 h-full flex flex-col justify-end items-center lg:pt-52 text-center">
    <h1
      class="text-4xl md:text-6xl font-extrabold leading-tight mb-4 animate-on-scroll"
    >
      Afiliaciones a la EPS, afiliate ahora
    </h1>
    <p
      class="text-lg md:text-xl font-medium tracking-wide mb-8 max-w-3xl mx-auto animate-on-scroll"
      style="transition-delay: 200ms;"
    >
      Afiliaciones a seguridad social, sin complicaciones. Trámites fáciles,
      rápidos y seguros.
    </p>
    <a
      href={`https://wa.me/${phone}?text=${message}`}
      target="_blank"
      class="max-w-52 bg-accent text-white font-bold py-4 px-10 rounded-full text-lg hover:bg-accent-dark transition-transform transform hover:scale-105 shadow-2xl animate-on-scroll"
      style="transition-delay: 400ms;">Afiliate Ahora</a
    >
  </div>
</section>
